<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>No Camp No Life</h1>
    <p>Get the wheels for the adventure of your life!</p>
    <a class="btn btn-flat" href="#">Book now</a>
  </div>
</div>

<div class="container">
<%= @cars.each do |car| %>
  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
        <h2><%= car.name %> </h2>
        <p><%= car.category %></p>
        <p><%= car.description %></p>
      </div>
      <h2 class="card-trip-pricing"><%= car.price_per_day %></h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
<% end %>
</div>
