<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-12 col-sm-12 col-md-6 col-xl-4 col-xxl-4 my-5">
      <h1>Add car</h1>
      <%= simple_form_for @car do |f| %>
        <%= f.input :car_model %>
        <%= f.input :capacity %>
        <%= f.input :description %>
        <%= f.input :price_per_day %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>
