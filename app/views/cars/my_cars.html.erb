<div class="container mt-5 col-12">
  <div class="d-flex align-items-center mb-5">
  <h1>My page</h1>
    <%= link_to 'My cars', my_cars_cars_path, class: "btn btn-primario ms-3 disabled" %>
    <%= link_to "My Bookings", bookings_path, class: "btn btn-primario ms-3" %>
    <%= link_to 'Bookings request', my_cars_bookings_path, class: "btn btn-primario ms-3" %>
  </div>
  <hr>

  <div class="mt-5 col-12" data-bookings-target="garage">
    <h2>My vehicles</h2>
    <div class='cards'>
      <% @my_cars.each do |car| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= car.photo.attached? ? cl_image_path(car.photo.key) : '/assets/not-available.jpg' %>)">
          <%= link_to "âœ–", car_path(car), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'delete-btn'%>
          <%= car.car_model %>
          <%= link_to '', car_path(car), class: 'card-category-link' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
