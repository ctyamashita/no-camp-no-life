<div class="form-box">
  <h2>Reserve <%= @car.car_model %></h2>
  <%= simple_form_for [@car, @booking] do |f| %>
    <%= f.date_field :start_date, min: Date.today %>
    <%= f.date_field :end_date, min: Date.today %>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
  <%= link_to 'Back', car_path(@car), class: 'btn btn-dark mt-3' %>
</div>
