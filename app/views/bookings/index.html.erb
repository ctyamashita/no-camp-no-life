<div class="container" style="margin: 0 auto;">
  <h1 style="font-size: xx-large; font-family: Helvetica; font-weight: bolder; margin-top: 22px">Your bookings</h1>

  <table style="padding: 0;  border-collapse: separate;" class="table">
    <thead>
      <tr>
        <th></th>
        <th>Vehicle</th>
        <th>Owner's Contact</th>
        <th>From</th>
        <th>To</th>
        <th>Price</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody style="vertical-align: middle;">
      <% @bookings.each do |booking| %>
        <div>
          <tr>
            <% if booking.car.photo.attached? %>
              <td style="padding: 0px;"><%= cl_image_tag booking.car.photo.key, height: 100, width: 150, crop: :fill, class: "padding: 0px"%></td>
            <% else %>
              <td style="background-image: url(https://source.unsplash.com/random/cars); height: 200px; width: 300px; padding: 0px; border-radius: 2%; background-size: cover"></td>
            <% end %>
            <td><%= booking.car.car_model %></td>
            <td><%= booking.car.user.email %></td>
            <td><%= booking.start_date %></td>
            <td><%= booking.end_date %></td>
            <td>Â¥<%= (booking.car.price_per_day * (booking.end_date - booking.start_date)).to_i %></td>
            <td><%= booking.status %></td>
          </tr>
        </div>
      <% end %>
    </tbody>
  </table>
</div>
